<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="331dp"
            android:layout_height="41dp" android:id="@+id/txtPrecio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre" android:hint="precioProducto"
            android:inputType="number"/>
        <EditText
            android:layout_width="331dp"
            android:layout_height="41dp" android:id="@+id/txtNombre"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp"
            android:hint="nombreProducto" android:autoText="false" android:inputType="text"/>
        <Spinner
            android:layout_width="162dp"
            android:layout_height="37dp" android:id="@+id/spnCategorias"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtPrecio"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnSalvarProducto"/>
        <Button
            android:text="Salvar"
            android:layout_width="79dp"
            android:layout_height="37dp" android:id="@+id/btnSalvarProducto"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spnCategorias" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtPrecio"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>